rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }
    
    function hasRole(role) {
      return isAuthenticated() && (
        getUserData().role == role || 
        getUserData().role == 'admin' || 
        getUserData().role == 'Admin' ||
        getUserData().role == 'Security' ||
        getUserData().role == 'security' ||
        getUserData().role == 'Warden' ||
        getUserData().role == 'warden'
      );
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Users Collection
    match /users/{userId} {
      allow read: if isAuthenticated() && (
        request.auth.uid == userId || 
        resource.data.role in ['warden', 'security'] ||
        hasRole('admin') || 
        hasRole('warden') || 
        hasRole('security')
      );
      allow create: if hasRole('admin') || request.resource.data.uid == request.auth.uid; // Allow admin or self-signup
      allow update: if hasRole('admin') || request.auth.uid == userId;
    }

    // SOS Events Collection
    match /sos_events/{eventId} {
      // 1. Creation: Allow anyone (student) to trigger
      // Simplified to fix "Insufficient Permissions" error on object check
      allow create: if isAuthenticated() 
        && request.resource.data.userId == request.auth.uid;
        
      // 2. Read: Strict visibility rules
      // - Student: Own SOS only
      // - Security: ALL
      // - Admin: ALL
      // - Warden: Only same hostel
      allow read: if isAuthenticated() && (
        request.auth.uid == resource.data.userId || 
        hasRole('security') || 
        hasRole('admin') || 
        (hasRole('warden') && resource.data.hostelId == getUserData().hostelId)
      );

      // 3. Update: EXCLUSIVE to Security
      // - Only Security can change status (recognise/resolve)
      // - No one else can update SOS events
      allow update: if isAuthenticated() 
        && hasRole('security')
        // Optional: Block changing immutable fields like studentId or original location if needed
        // but mostly ensuring only security can write is the key requirement.
        && request.resource.data.diff(resource.data).affectedKeys()
           .hasOnly(['status', 'recognisedBy', 'resolvedAt', 'timeline', 'assignedTo', 'updatedAt', 'resolutionSummary']);
    }

    // Incidents Collection
    match /incidents/{incidentId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if hasRole('admin') || hasRole('warden') || hasRole('security');
    }

    // Active Patrols
    match /active_patrols/{patrolId} {
      allow read, write: if hasRole('security') || hasRole('admin');
    }

    // Broadcasts
    match /broadcasts/{broadcastId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if hasRole('security') || hasRole('warden') || hasRole('admin');
    }

    // Audit Logs
    match /audit_logs/{logId} {
      allow read: if hasRole('admin');
      allow create: if isAuthenticated(); // Allow system to log actions
    }

    // Safe Walk
    match /safe_walk/{walkId} {
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow read: if isAuthenticated() && (
        request.auth.uid == resource.data.userId ||
        hasRole('security') ||
        hasRole('admin') ||
        (hasRole('warden') && resource.data.hostelId == getUserData().hostelId)
      );
      allow update: if isAuthenticated() && (
        request.auth.uid == resource.data.userId ||
        hasRole('security') ||
        hasRole('admin') ||
        (hasRole('warden') && resource.data.hostelId == getUserData().hostelId)
      );
    }

    // ============================================================================
    // üí¨ CONVERSATIONS (Private Chat)
    // ============================================================================
    // Root-level collection for Chat metadata
    match /conversations/{conversationId} {
      // Split rules to handle 'create' where resource is null
      allow create: if isAuthenticated() && request.auth.uid in request.resource.data.participants;
      // Read allows check if participants[uid] == true (matches query) OR just explicit key existence
      allow read, update: if isAuthenticated() && (
        request.auth.uid in resource.data.participants || 
        resource.data.participants[request.auth.uid] == true
      );

      // üì® MESSAGES (Sub-collection)
      match /messages/{messageId} {
        // Create: Only participants can send messages
        allow create: if isAuthenticated() && 
          request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants &&
          request.resource.data.senderId == request.auth.uid;

        // Read: Only participants can read
        allow read: if isAuthenticated() && 
          request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants;

        // Update: Only for status, deletion, and readBy updates
        allow update: if isAuthenticated() && 
          request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants &&
          (
            // Allow updating status for delivery/seen indicators
            (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status', 'readBy'])) ||
            // Allow sender to delete for everyone (only if not seen)
            (request.auth.uid == resource.data.senderId && 
             request.resource.data.diff(resource.data).affectedKeys().hasOnly(['deletedGlobal', 'text']) &&
             resource.data.status == 'sent') ||
            // Allow any participant to add themselves to deletedFor
            (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['deletedFor']) &&
             request.auth.uid in request.resource.data.deletedFor)
          );

        // No delete allowed - messages persist for audit
        allow delete: if false;
      }

      // üñäÔ∏è TYPING STATUS (Sub-collection)
      match /typing/{userId} {
        allow read: if isAuthenticated() && 
          request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants;
        allow write: if isAuthenticated() && 
          request.auth.uid == userId &&
          request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants;
      }
    }

    // WebRTC Calls (Pure Signaling)
    match /calls/{callId} {
      allow read, update, delete: if isAuthenticated() && 
        (request.auth.uid == resource.data.callerId || request.auth.uid == resource.data.receiverId);
      allow create: if isAuthenticated();

      match /callerCandidates/{id} {
        allow read, write: if isAuthenticated();
      }
      match /calleeCandidates/{id} {
        allow read, write: if isAuthenticated();
      }
    }

    // Global Notifications (Missed Calls, etc.)
    match /notifications/{notificationId} {
      allow create: if isAuthenticated();
      allow read, update, delete: if isAuthenticated() && (
        request.auth.uid == resource.data.toUserId ||
        (resource.data.toRole != null && hasRole(resource.data.toRole))
      );
    }

    // Reports Collection
    match /reports/{reportId} {
      allow read: if isAuthenticated() && (
        request.auth.uid == resource.data.userId ||
        hasRole('warden') ||
        hasRole('security') ||
        hasRole('admin')
      );
      allow create: if isAuthenticated();
      allow update: if hasRole('admin') || hasRole('warden');
    }

    // Posts Collection (Public Feed)
    match /posts/{postId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && hasRole('student')
        && request.resource.data.authorId == request.auth.uid
        && request.resource.data.authorRole == 'student'
        && request.resource.data.text.size() <= 280;
      allow update, delete: if isAuthenticated() && request.auth.uid == resource.data.authorId;
    }

    // Default catch-all (restrictive)
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
