rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    // Returns the Firestore user doc data (costs 1 read per rule eval ‚Äî use sparingly)
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    // Exact role match ‚Äî use when you need a specific role only
    function isRole(role) {
      return isAuthenticated() && getUserData().role == role;
    }

    // Any privileged staff member (admin, warden, or security)
    // Previously called hasRole() but that was misleading ‚Äî it ignored the argument!
    function isStaff() {
      return isAuthenticated() && (
        getUserData().role in ['admin', 'Admin', 'warden', 'Warden', 'security', 'Security']
      );
    }

    // Convenience shortcuts
    function isAdmin()    { return isRole('admin') || isRole('Admin'); }
    function isWarden()   { return isRole('warden') || isRole('Warden'); }
    function isSecurity() { return isRole('security') || isRole('Security'); }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Users Collection
    match /users/{userId} {
      allow read: if isAuthenticated() && (
        request.auth.uid == userId ||
        isStaff() || // Staff can read all profiles
        resource.data.role in ['warden', 'security'] // Anyone can read staff profiles (for the emergency contacts list)
      );
      allow create: if isAdmin() || request.resource.data.uid == request.auth.uid;
      allow update: if isAdmin() || request.auth.uid == userId;
      allow delete: if isAdmin();
    }

    // SOS Events Collection
    match /sos_events/{eventId} {
      allow create: if isAuthenticated();
      allow read:   if isAuthenticated();

      allow update: if
        // Staff or the SOS owner can update
        isStaff() || isOwner(resource.data.userId) ||
        // Token-based cancel (unauthenticated) ‚Äî only allow safe fields
        (request.resource.data.sosToken == resource.data.sosToken &&
         request.resource.data.diff(resource.data).affectedKeys()
           .hasOnly(['status', 'resolvedAt', 'resolutionSummary', 'timeline', 'liveLocation']));

      allow delete: if isAdmin();
    }

    // SOS Sessions Collection
    match /sos_sessions/{sessionId} {
      allow create: if isAuthenticated();
      allow read, update: if isAuthenticated() && (isOwner(resource.data.userId) || isSecurity() || isAdmin());
      allow delete: if isAdmin();
    }

    // Incidents Collection (Reports)
    match /incidents/{incidentId} {
      allow read: if isAuthenticated() && (isOwner(resource.data.userId) || isStaff());
      allow create: if isAuthenticated();
      allow update: if isStaff();
      allow delete: if isAdmin() || (isAuthenticated() && isOwner(resource.data.userId) && resource.data.status == 'resolved');
    }

    // Active Patrols
    match /active_patrols/{patrolId} {
      allow read, write: if isSecurity() || isAdmin();
    }

    // Broadcasts
    match /broadcasts/{broadcastId} {
      allow read: if isAuthenticated();
      allow create, update: if isStaff();
      allow delete: if isAuthenticated() && (
        request.auth.uid == resource.data.createdById || isAdmin()
      );
    }

    // Audit Logs
    match /audit_logs/{logId} {
      allow read, delete: if isAdmin();
      allow create: if isAuthenticated();
    }

    // Safe Walk
    match /safe_walk/{walkId} {
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow read, update: if isAuthenticated() && (isOwner(resource.data.userId) || isStaff());
      allow delete: if isAdmin();
    }

    // ============================================================================
    // üí¨ CONVERSATIONS (Private Chat)
    // ============================================================================
    // Root-level collection for Chat metadata
    match /conversations/{conversationId} {
      // Split rules to handle 'create' where resource is null
      allow create: if isAuthenticated() && (
        request.auth.uid in request.resource.data.participants ||
        (request.resource.data.participantIds != null && request.auth.uid in request.resource.data.participantIds)
      );
      // Read allows check if participants[uid] == true (matches query) OR just explicit key existence
      allow read, update: if isAuthenticated() && (
        (resource.data.participantIds != null && request.auth.uid in resource.data.participantIds) ||
        request.auth.uid in resource.data.participants
      );

      // üì® MESSAGES (Sub-collection)
      match /messages/{messageId} {
        // Function to check participant membership safely
        function isParticipant() {
           let convData = get(/databases/$(database)/documents/conversations/$(conversationId)).data;
           return (convData.participantIds != null && request.auth.uid in convData.participantIds) || 
                  (request.auth.uid in convData.participants);
        }

        // Create: Only participants can send messages
        allow create: if isAuthenticated() && 
          isParticipant() &&
          request.resource.data.senderId == request.auth.uid;

        // Read: Only participants can read
        allow read: if isAuthenticated() && isParticipant();

        // Update: Only for status, deletion, and readBy updates
        allow update: if isAuthenticated() && 
          isParticipant() &&
          (
            // Allow updating status for delivery/seen indicators OR adding reactions
            (request.resource.data.diff(resource.data).affectedKeys().hasAny(['status', 'readBy', 'reactions'])) ||
            // Allow sender to edit message (within 15 min limit is handled client side for UX, but rules can also check)
            (request.auth.uid == resource.data.senderId && 
             request.resource.data.diff(resource.data).affectedKeys().hasAny(['text', 'isEdited', 'editedAt'])) ||
            // Allow sender to delete for everyone
            (request.auth.uid == resource.data.senderId && 
             request.resource.data.diff(resource.data).affectedKeys().hasOnly(['deletedGlobal', 'text'])) ||
            // Allow any participant to add themselves to deletedFor
            (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['deletedFor']) &&
             request.resource.data.deletedFor.hasAll(resource.data.get('deletedFor', [])) &&
             request.auth.uid in request.resource.data.deletedFor)
          );

        // No delete allowed - messages persist for audit
        allow delete: if false;
      }

      // üñäÔ∏è TYPING STATUS (Sub-collection)
      match /typing/{userId} {
        function isParticipant() {
           let convData = get(/databases/$(database)/documents/conversations/$(conversationId)).data;
           return (convData.participantIds != null && request.auth.uid in convData.participantIds) || 
                  (request.auth.uid in convData.participants);
        }

        allow read: if isAuthenticated() && isParticipant();
        allow write: if isAuthenticated() && request.auth.uid == userId && isParticipant();
      }
    }

    // WebRTC Calls (Pure Signaling)
    match /calls/{callId} {
      allow read, update, delete: if isAuthenticated() && (
        request.auth.uid == resource.data.callerId || 
        request.auth.uid == resource.data.receiverId ||
        (resource.data.receiverId == 'broadcast' && (
          resource.data.receiverRole == getUserData().role || 
          isRole(resource.data.receiverRole)
        ))
      );
      allow create: if isAuthenticated();

      match /callerCandidates/{id} {
        allow read, write: if isAuthenticated();
      }
      match /calleeCandidates/{id} {
        allow read, write: if isAuthenticated();
      }
    }

    // Global Notifications (Missed Calls, etc.)
    match /notifications/{notificationId} {
      allow create: if isAuthenticated();
      allow read, update, delete: if isAuthenticated() && (
        request.auth.uid == resource.data.toUserId ||
        (resource.data.toRole != null && isRole(resource.data.toRole))
      );
    }

    // Reports Collection
    match /reports/{reportId} {
      allow read: if isAuthenticated() && (isOwner(resource.data.userId) || isStaff());
      allow create: if isAuthenticated();
      allow update: if isAdmin() || isWarden();
    }

    // Posts Collection (Campus Feed)
    match /posts/{postId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated()
        && request.resource.data.authorId == request.auth.uid
        && request.resource.data.authorRole in ['student', 'admin', 'warden', 'security']
        && request.resource.data.text.size() <= 280;
      allow update, delete: if isAuthenticated() && request.auth.uid == resource.data.authorId;
    }

    // System Settings (Global Config)
    match /system_settings/{docId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // Default catch-all (restrictive)
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
