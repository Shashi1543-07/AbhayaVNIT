rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }
    
    function hasRole(role) {
      return isAuthenticated() && (
        getUserData().role == role || 
        getUserData().role == 'admin' || 
        getUserData().role == 'Admin' ||
        getUserData().role == 'Security' ||
        getUserData().role == 'security' ||
        getUserData().role == 'Warden' ||
        getUserData().role == 'warden'
      );
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Users Collection
    match /users/{userId} {
      allow read: if isAuthenticated() && (
        request.auth.uid == userId || 
        resource.data.role in ['warden', 'security'] ||
        hasRole('admin') || 
        hasRole('warden') || 
        hasRole('security')
      );
      allow create: if hasRole('admin') || request.resource.data.uid == request.auth.uid; // Allow admin or self-signup
      allow update: if hasRole('admin') || request.auth.uid == userId;
      allow delete: if hasRole('admin');
    }

    // SOS Events Collection
    match /sos_events/{eventId} {
      // 1. Creation: Allow any authenticated user to create
      allow create: if isAuthenticated();
        
      // 2. Read: Allow any authenticated user to read
      allow read: if isAuthenticated();

      // 3. Update: 
      allow update: if 
        // A. Authenticated owner, security, warden, or admin
        hasRole('security') || hasRole('admin') || hasRole('warden') || isOwner(resource.data.userId) ||
        // B. Unauthenticated (for token-based cancellation)
        // We allow updating the status and timeline if the correct token is provided in the request
        (request.resource.data.sosToken == resource.data.sosToken && 
         request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status', 'resolvedAt', 'resolutionSummary', 'timeline', 'liveLocation']))
      ;

      // 4. Delete: Admin only (for cascading cleanup)
      allow delete: if hasRole('admin');
    }

    // SOS Sessions Collection (for Spark plan client-side management)
    match /sos_sessions/{sessionId} {
      allow create: if isAuthenticated();
      allow read, update: if isAuthenticated() && (isOwner(resource.data.userId) || hasRole('security') || hasRole('admin'));
      allow delete: if hasRole('admin');
    }

    // Incidents Collection (Reports)
    match /incidents/{incidentId} {
      allow read: if isAuthenticated() && (
        isOwner(resource.data.userId) || 
        hasRole('admin') || 
        hasRole('warden') || 
        hasRole('security')
      );
      allow create: if isAuthenticated();
      allow update: if hasRole('admin') || hasRole('warden') || hasRole('security');
      allow delete: if hasRole('admin') || (isAuthenticated() && isOwner(resource.data.userId) && resource.data.status == 'resolved');
    }

    // Active Patrols
    match /active_patrols/{patrolId} {
      allow read, write: if hasRole('security') || hasRole('admin');
    }

    // Broadcasts
    match /broadcasts/{broadcastId} {
      allow read: if isAuthenticated();
      allow create: if hasRole('security') || hasRole('warden') || hasRole('admin');
      allow update: if hasRole('security') || hasRole('warden') || hasRole('admin');
      // Allow delete by creator (createdById) or admin
      allow delete: if isAuthenticated() && (
        request.auth.uid == resource.data.createdById ||
        hasRole('admin')
      );
    }

    // Audit Logs
    match /audit_logs/{logId} {
      allow read: if hasRole('admin');
      allow create: if isAuthenticated(); // Allow system to log actions
    }

    // Safe Walk
    match /safe_walk/{walkId} {
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow read: if isAuthenticated() && (
        request.auth.uid == resource.data.userId ||
        hasRole('security') ||
        hasRole('admin') ||
        (hasRole('warden') && resource.data.hostelId == getUserData().hostelId)
      );
      allow update: if isAuthenticated() && (
        request.auth.uid == resource.data.userId ||
        hasRole('security') ||
        hasRole('admin') ||
        (hasRole('warden') && resource.data.hostelId == getUserData().hostelId)
      );
      allow delete: if hasRole('admin');
    }

    // ============================================================================
    // üí¨ CONVERSATIONS (Private Chat)
    // ============================================================================
    // Root-level collection for Chat metadata
    match /conversations/{conversationId} {
      // Split rules to handle 'create' where resource is null
      allow create: if isAuthenticated() && (
        request.auth.uid in request.resource.data.participants ||
        (request.resource.data.participantIds != null && request.auth.uid in request.resource.data.participantIds)
      );
      // Read allows check if participants[uid] == true (matches query) OR just explicit key existence
      allow read, update: if isAuthenticated() && (
        (resource.data.participantIds != null && request.auth.uid in resource.data.participantIds) ||
        request.auth.uid in resource.data.participants
      );

      // üì® MESSAGES (Sub-collection)
      match /messages/{messageId} {
        // Function to check participant membership safely
        function isParticipant() {
           let convData = get(/databases/$(database)/documents/conversations/$(conversationId)).data;
           return (convData.participantIds != null && request.auth.uid in convData.participantIds) || 
                  (request.auth.uid in convData.participants);
        }

        // Create: Only participants can send messages
        allow create: if isAuthenticated() && 
          isParticipant() &&
          request.resource.data.senderId == request.auth.uid;

        // Read: Only participants can read
        allow read: if isAuthenticated() && isParticipant();

        // Update: Only for status, deletion, and readBy updates
        allow update: if isAuthenticated() && 
          isParticipant() &&
          (
            // Allow updating status for delivery/seen indicators OR adding reactions
            (request.resource.data.diff(resource.data).affectedKeys().hasAny(['status', 'readBy', 'reactions'])) ||
            // Allow sender to edit message (within 15 min limit is handled client side for UX, but rules can also check)
            (request.auth.uid == resource.data.senderId && 
             request.resource.data.diff(resource.data).affectedKeys().hasAny(['text', 'isEdited', 'editedAt'])) ||
            // Allow sender to delete for everyone
            (request.auth.uid == resource.data.senderId && 
             request.resource.data.diff(resource.data).affectedKeys().hasOnly(['deletedGlobal', 'text'])) ||
            // Allow any participant to add themselves to deletedFor
            (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['deletedFor']) &&
             request.resource.data.deletedFor.hasAll(resource.data.get('deletedFor', [])) &&
             request.auth.uid in request.resource.data.deletedFor)
          );

        // No delete allowed - messages persist for audit
        allow delete: if false;
      }

      // üñäÔ∏è TYPING STATUS (Sub-collection)
      match /typing/{userId} {
        function isParticipant() {
           let convData = get(/databases/$(database)/documents/conversations/$(conversationId)).data;
           return (convData.participantIds != null && request.auth.uid in convData.participantIds) || 
                  (request.auth.uid in convData.participants);
        }

        allow read: if isAuthenticated() && isParticipant();
        allow write: if isAuthenticated() && request.auth.uid == userId && isParticipant();
      }
    }

    // WebRTC Calls (Pure Signaling)
    match /calls/{callId} {
      allow read, update, delete: if isAuthenticated() && 
        (request.auth.uid == resource.data.callerId || request.auth.uid == resource.data.receiverId);
      allow create: if isAuthenticated();

      match /callerCandidates/{id} {
        allow read, write: if isAuthenticated();
      }
      match /calleeCandidates/{id} {
        allow read, write: if isAuthenticated();
      }
    }

    // Global Notifications (Missed Calls, etc.)
    match /notifications/{notificationId} {
      allow create: if isAuthenticated();
      allow read, update, delete: if isAuthenticated() && (
        request.auth.uid == resource.data.toUserId ||
        (resource.data.toRole != null && hasRole(resource.data.toRole))
      );
    }

    // Reports Collection
    match /reports/{reportId} {
      allow read: if isAuthenticated() && (
        request.auth.uid == resource.data.userId ||
        hasRole('warden') ||
        hasRole('security') ||
        hasRole('admin')
      );
      allow create: if isAuthenticated();
      allow update: if hasRole('admin') || hasRole('warden');
    }

    // Posts Collection (Campus Feed)
    match /posts/{postId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated()
        && request.resource.data.authorId == request.auth.uid
        && request.resource.data.authorRole in ['student', 'admin', 'warden', 'security']
        && request.resource.data.text.size() <= 280;
      allow update, delete: if isAuthenticated() && request.auth.uid == resource.data.authorId;
    }

    // Default catch-all (restrictive)
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
