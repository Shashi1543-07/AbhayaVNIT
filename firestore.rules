rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }
    
    function hasRole(role) {
      return isAuthenticated() && getUserData().role == role;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Users Collection
    match /users/{userId} {
      allow read: if isAuthenticated() && (
        request.auth.uid == userId || 
        resource.data.role in ['warden', 'security'] ||
        hasRole('admin') || 
        hasRole('warden') || 
        hasRole('security')
      );
      allow create: if hasRole('admin') || request.resource.data.uid == request.auth.uid; // Allow admin or self-signup
      allow update: if hasRole('admin') || request.auth.uid == userId;
    }

    // SOS Events Collection
    match /sos_events/{eventId} {
      // Allow creation only if data is valid and user is owner
      allow create: if isAuthenticated() 
        && request.resource.data.userId == request.auth.uid
        && request.resource.data.status == 'active'
        && request.resource.data.location.lat is number
        && request.resource.data.location.lng is number;

      // Wardens: Only their hostel OR if assigned
      // Security/Admin: ALL
      allow read: if isAuthenticated() && (
        request.auth.uid == resource.data.userId || 
        hasRole('admin') || 
        hasRole('security') || 
        (hasRole('warden') && resource.data.hostelId == getUserData().hostelId)
      );
      
      // Updates: Only status/timeline (e.g., resolving, acknowledging)
      allow update: if isAuthenticated() && (
        hasRole('admin') || 
        hasRole('security') || 
        request.auth.uid == resource.data.userId ||
         (hasRole('warden') && resource.data.hostelId == getUserData().hostelId)
      );
    }

    // Incidents Collection
    match /incidents/{incidentId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if hasRole('admin') || hasRole('warden') || hasRole('security');
    }

    // Active Patrols
    match /active_patrols/{patrolId} {
      allow read, write: if hasRole('security') || hasRole('admin');
    }

    // Broadcasts
    match /broadcasts/{broadcastId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if hasRole('admin') || hasRole('warden');
    }

    // Audit Logs
    match /audit_logs/{logId} {
      allow read: if hasRole('admin');
      allow create: if isAuthenticated(); // Allow system to log actions
    }

    // Safe Walk
    match /safe_walk/{walkId} {
      allow create: if isAuthenticated();
      allow read: if isAuthenticated() && (
        request.auth.uid == resource.data.userId ||
        hasRole('security') ||
        hasRole('warden') ||
        hasRole('admin')
      );
      allow update: if isAuthenticated() && (
        request.auth.uid == resource.data.userId ||
        hasRole('security') ||
        hasRole('warden') ||
        hasRole('admin')
      );
    }

    // ============================================================================
    // ðŸ’¬ CONVERSATIONS (Private Chat)
    // ============================================================================
    // Root-level collection for Chat metadata
    match /conversations/{conversationId} {
      // Split rules to handle 'create' where resource is null
      allow create: if isAuthenticated() && request.auth.uid in request.resource.data.participants;
      // Read allows check if participants[uid] == true (matches query) OR just explicit key existence
      allow read, update: if isAuthenticated() && (
        request.auth.uid in resource.data.participants || 
        resource.data.participants[request.auth.uid] == true
      );

      // ðŸ“¨ MESSAGES (Sub-collection)
      match /messages/{messageId} {
        // Read/Write allowed if user is a participant in the PARENT conversation
        // We use 'get' to check parent data because 'resource' refers to the message itself
        allow read, write: if isAuthenticated() && 
          request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants;
      }
    }

    // WebRTC Calls (Pure Signaling)
    match /calls/{callId} {
      allow create: if isAuthenticated() && request.resource.data.callerId == request.auth.uid;
      allow read, update, delete: if isAuthenticated() && (
        request.auth.uid == resource.data.callerId || 
        request.auth.uid == resource.data.receiverId
      );
    }

    // Global Notifications (Missed Calls, etc.)
    match /notifications/{notificationId} {
      allow create: if isAuthenticated();
      allow read, update, delete: if isAuthenticated() && (
        request.auth.uid == resource.data.toUserId ||
        (resource.data.toRole != null && hasRole(resource.data.toRole))
      );
    }

    // Reports Collection
    match /reports/{reportId} {
      allow read: if isAuthenticated() && (
        request.auth.uid == resource.data.userId ||
        hasRole('warden') ||
        hasRole('security') ||
        hasRole('admin')
      );
      allow create: if isAuthenticated();
      allow update: if hasRole('admin') || hasRole('warden');
    }

    // Default catch-all (restrictive)
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
