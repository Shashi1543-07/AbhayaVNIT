rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }
    
    function hasRole(role) {
      return isAuthenticated() && getUserData().role == role;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Users Collection
    match /users/{userId} {
      allow read: if isAuthenticated() && (request.auth.uid == userId || hasRole('admin') || hasRole('warden') || hasRole('security'));
      allow create: if hasRole('admin') || request.resource.data.uid == request.auth.uid; // Allow admin or self-signup
      allow update: if hasRole('admin') || request.auth.uid == userId;
    }

    // SOS Events Collection
    match /sos_events/{eventId} {
      allow create: if isAuthenticated();
      // Wardens can read if they are a warden (broad access for safety, client-side filters specific hostel)
      // Security and Admin can read all.
      allow read: if isAuthenticated() && (
        request.auth.uid == resource.data.userId || 
        hasRole('admin') || 
        hasRole('security') || 
        hasRole('warden')
      );
      allow update: if isAuthenticated() && (
        hasRole('admin') || 
        hasRole('security') || 
        request.auth.uid == resource.data.userId
      );
    }

    // Incidents Collection
    match /incidents/{incidentId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if hasRole('admin') || hasRole('warden') || hasRole('security');
    }

    // Active Patrols
    match /active_patrols/{patrolId} {
      allow read, write: if hasRole('security') || hasRole('admin');
    }

    // Broadcasts
    match /broadcasts/{broadcastId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if hasRole('admin') || hasRole('warden');
    }

    // Audit Logs
    match /audit_logs/{logId} {
      allow read: if hasRole('admin');
      allow create: if isAuthenticated(); // Allow system to log actions
    }

    // Safe Walk
    match /safe_walk/{walkId} {
      allow create: if isAuthenticated();
      allow read: if isAuthenticated() && (
        request.auth.uid == resource.data.userId ||
        hasRole('security') ||
        hasRole('warden') ||
        hasRole('admin')
      );
      allow update: if isAuthenticated() && (
        request.auth.uid == resource.data.userId ||
        hasRole('security') ||
        hasRole('warden') ||
        hasRole('admin')
      );
    }

    // Default catch-all (restrictive)
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
